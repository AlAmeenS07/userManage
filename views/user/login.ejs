<link rel="stylesheet" href="/userStyle/style.css">

<body>
    <div class="login-container">
        <h2>Login Page</h2>
        <div class="signup-link" style="color: red;  font-size: 1rem; font-weight: 300;">
            <%= msg %>
        </div><br>
        <form action="/user/login" method="POST" class="login-form">
            <div class="input-group"> 
                <label for="email">Email</label> 
                <input type="email" id="email" name="email"> 
            </div>
            <div class="input-group">
                <label for="password">Password</label> 
                <input type="password" id="password" name="password"> 
            </div> 
            <button type="submit" class="login-btn">Login</button>
        </form>
        <h6 id="signup">Create new accound? <a href="/user/signup">Sign up</a></h6>
    </div>
</body>