<link rel="stylesheet" href="/userStyle/signup.css">

<body>
    <div class="form-container">
        <h2>Sign Up</h2>
        <form method="post" action="/user/signup">
            <% if(msg) { %>
            <div class="signup-link" style="color: red; text-align: center;  font-size: 1rem; font-weight: 300;">
                <%= msg %>
            </div><br>
            <% } %>
            <div class="input-field">
                <input type="text" id="name" name="name" placeholder=" ">
                <label for="name">Full Name</label>
            </div>
            <div class="input-field">
                <input type="email" id="email" name="email" placeholder=" ">
                <label for="email">Email Address</label>
            </div>
            <div class="input-field">
                <input type="password" id="password" name="password" placeholder=" ">
                <label for="password">Password</label>
            </div>
            <div class="input-field">
                <input type="password" id="confirm-password" name="confirmpassword" placeholder=" ">
                <label for="confirm-password">Confirm Password</label>
            </div>
            <button type="submit" class="btn-submit">Sign Up</button>
        </form>
        <div class="text-center">
            <p>Already have an account? <a href="/user/login">Login</a></p>
        </div>
    </div>

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<% if (success) { %>
<script>
    swal("Success", "<%= success %>", "success")
      .then(() => {
        window.location.href = "/user/home";
      });
</script>
<% } %>

</body>